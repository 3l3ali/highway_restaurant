<div id="footer">
  <div class="container">
    <div class="row">
    <div class="col-md-3 col-xs-12">
      <h4 class="list-group-title">Follow us</h4>
      <ul class="list-unstyled">
        <li class="menu-item">
         <%= link_to "https://web.facebook.com/highway.rest.cafe", target: :_blank do %>
            <p><i class="fa fa-facebook-square" aria-hidden="true"></i>&nbsp; Facebook</p>
          <% end %>
        </li>
        <li class="menu-item">
        <%= link_to "https://www.instagram.com/highway_rest_cafe/", target: :_blank do %>
          <p><i class="fa fa-instagram" aria-hidden="true"></i>&nbsp; Instagram</p>
        <% end %>
        </li>
      </ul>
    </div>

     <div class="col-md-3 col-xs-12">
      <h4 class="list-group-title">Contact us</h4>
      <ul class="list-unstyled">
        <li class="menu-item">highway@mail.com</li>
      </ul>
    </div>

     <div class="col-md-3 col-xs-12 col-md-offset-3">
      <h4 class="list-group-title">Our locations</h4>
      <div id="map"></div>
    </div>

    <!-- Include Google Maps JS library. You should use your *own* key -->
    <script src="https://maps.google.com/maps/api/js?key=<%= ENV['GOOGLE_API'] %>"></script>

    <!-- Include Dependencies of GMaps for Rails gem -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-marker-clusterer/1.0.0/markerclusterer_compiled.js"></script>
    <script src="https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js"></script>
    <script src="https://cdn.rawgit.com/apneadiving/Google-Maps-for-Rails/master/js_compilation/gmaps_google.js"></script>

    <script type="text/javascript">
      $(document).on('ready', function() {
        var handler = Gmaps.build('Google', { markers: { clusterer: undefined }});
        handler.buildMap({ internal: { id: 'map' } }, function(){
          markers = handler.addMarkers([
            {
              "lat": 32.53487669890565,
              "lng": 35.860780477523804,
              "infowindow": "<h1>Highway</h1><p><img src='highway-logo1.jpg'></p>"
            },
            {
              "lat": 32.411958,
              "lng": 35.94836,
              "infowindow": "<h1>Highway</h1><p><img src='highway-logo1.jpg'></p>"
            }
          ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      })
    </script>

      </div>
    </div>
  </div>
