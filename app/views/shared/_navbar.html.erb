<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "highway-logo1.jpg" %>
  <% end %>
    <!-- <h2>highway restaurant and cafe</h2> -->
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to menu_pages_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-cutlery" aria-hidden="true"></i> Menu
      <% end %>
      <%= link_to orders_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-cart-arrow-down" aria-hidden="true"></i> Orders
      <% end %>
      <%= link_to contact_us_pages_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-phone" aria-hidden="true"></i> Contact Us
      <% end %>
      <%= link_to admin_root_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-unlock-alt" aria-hidden="true"></i> Admin
      <% end if current_user.admin? %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "Profile-Placeholder.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to addresses_path do %>
                <i class="fa fa-address-book"></i> <%= t(".profile", default: "Addresses") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to contact_us_pages_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-phone" aria-hidden="true"></i> Contact Us
      <% end %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Addresses", addresses_path %></li>
          <li>
            <%= link_to contact_us_pages_path, class: "navbar-wagon-item navbar-wagon-link" do %>
              <i class="fa fa-phone" aria-hidden="true"></i> Contact Us
            <% end %>
          </li>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  <!-- </div> -->
  <% else %>
  <!-- Login link (when logged out) -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Home", root_path %></li>
          <li>
            <%= link_to contact_us_pages_path, class: "navbar-wagon-item navbar-wagon-link" do %>
              <i class="fa fa-phone" aria-hidden="true"></i> Contact Us
            <% end %>
          </li>
          <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path %></li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>


