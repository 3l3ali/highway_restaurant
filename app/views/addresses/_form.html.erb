<%= simple_form_for @address do |f|%>
  <%= f.input :city, collection: Address::CITY %>
  <%= f.input :area, collection: Address::AREA %>
  <%= f.input :road_name %>
  <%= f.input :building_number %>
  <%= f.input :apartment_number %>
  <%= f.input :floor %>
  <%= f.input :landmark %>
  <%= f.submit class:"btn btn-success submit-address-btn"%>
<% end %>
