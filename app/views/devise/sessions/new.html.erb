<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="login-form-wrapper">

      <h2 class="text-center">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= f.input :email, required: false, autofocus: true, placeholder: "Ahmed@gmail.com" %>
          <%= f.input :password, required: false, placeholder: "••••••••••••" %>
          <%= f.input :remember_me, as: :boolean  %>



          <%= f.button :submit, "Log in" , class: "submit-btn" %>
      <% end %>


      <div class='forgot-your-pw'>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-btn" %>
            <br />

            <div class="or-line-login">
              <span>
                or
              </span>
            </div>

          </div>
            <div class="sign-up-btns">
              <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-primary sign-up-btn' %>
              <div class="fb-div">
                <%= link_to user_facebook_omniauth_authorize_path, class:"fb-login-no-hover" do %>
                  <div class="fb-login-btn text-center">
                    <i class="fa fa-facebook"></i>&nbsp; Sign in with Facebook
                  </div>
                <% end %>
              </div>
            </div>


      </div>
    </div>
  </div>
</div>
